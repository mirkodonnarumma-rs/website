---
type Lang = 'it' | 'en';
const props = Astro.props as { lang?: Lang };
const lang: Lang = props.lang ?? 'it';
const year = new Date().getFullYear();

const texts: {
  copyright: { it: string; en: string };
} = {
  copyright: {
    it: `© ${year} Mirko Donnarumma · Tutti i diritti riservati`,
    en: `© ${year} Mirko Donnarumma · All rights reserved`
  },
};
---
<footer class="border-t border-gray-200 py-3 px-6 text-center text-sm text-gray-600 bg-gray-50 flex-shrink-0">
  <div class="flex flex-col items-center gap-2">
    <p>{texts.copyright[lang]}</p>
  </div>
</footer>

