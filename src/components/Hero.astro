---
const { copy = {}, about = {} } = Astro.props;
const hero = copy ?? {};
---

<section id="hero" class="snap-start flex items-start py-12">
  <div class="container ">
    <div class="md:col-span-7 ">
      <pre class="ascii py-4" aria-hidden="true"></pre>
      <ul class="py-4 list-disc ml-5 text-muted ">
        {(hero.bullets ?? []).map((item: unknown) => <li>{item}</li>)}
      </ul>
    </div>
    <aside class="md:col-span-5">
      <div class="card reveal">
        <h2 class="text-2xl font-bold">{about.title ?? "About"}</h2>
        <p class="py-4 text-muted">{about.text ?? ""}</p>
        <p class="py-4 text-muted">{about.text2 ?? ""}</p>
        <p class="py-4 text-muted">{about.text3 ?? ""}</p>
        <p class="py-4 text-muted">{about.text4 ?? ""}</p>

        <div class="py-4 grid grid-cols-1 gap-4">
          <div>
            <h4 class="font-semibold">Competenze</h4>
            <ul class="py-4 list-disc ml-5 text-muted">
              {(about.skills ?? []).map((s: unknown) => <li>{s}</li>)}
            </ul>
          </div>
        </div>
        <div class="flex flex-col gap-8"></div>
      </div>
    </aside>
  </div>
</section>
