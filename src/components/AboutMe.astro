---
const { about = {} } = Astro.props;
---

<section id="aboutme" class="snap-start py-12">
  <div class="container grid grid-cols-1 md:grid-cols-12 gap-8 items-start">
    <div class="card reveal">
      <h2 class="text-3xl font-bold mb-3">{about.title ?? "About"}</h2>
      <p class="mb-4 text-muted">{about.text ?? ""}</p>
      <p class="mb-4 text-muted">{about.text2 ?? ""}</p>
      <p class="mb-4 text-muted">{about.text3 ?? ""}</p>
      <p class="mb-4 text-muted">{about.text4 ?? ""}</p>
      <blockquote>
        <a href="https://rustacean-principles.netlify.app/" class="btn-primary"
          >{about.text5 ?? ""}</a>
      </blockquote>
    </div>
  </div>
</section>
